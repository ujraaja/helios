%html
  %head
    %title Taulbee Survey Data
    :css
      #cover{
      	background:url("http://www.aveva.com/Images/ajax-loader.gif") no-repeat scroll center center #FFF;
      	position:absolute;
      	height:100%;
      	width:100%;
      }
      
      .heading{
      	color:white;
      	background-color:#500000;
      	height:50px;
      	margin:0;
      	padding:0;
      }
      
      
      .centered{
      	text-align:center;
      }
  %body
    #cover
    
    .heading
      %h1.centered Taulbee Survey
    %p
      %a{:href => site_index_path}
        %img{:height => "30", :src => "/images/homepageicon.jpg", :width => "30"}/
      %a{:href => site_studentFilterSelection_path}
        %img{:height => "30", :src => "/images/previous-icon.png", :width => "30"}/
    %hr/
    
    
    %h2 Result
    - if @count
      %h3 Count = #{@cats.length}
    %table#cats
      %thead
        %tr
        - @attributes.each do |attribute|
          - if attribute[1] != "count"
            %th= attribute[1]
      %tbody
        - @cats.each do |cat|
          %tr
            - @attributes.each do |attribute|
              - if attribute[1] != "count"
                %td= cat.send(attribute[1])
    
    -#%img{:align => "center", :height => "250", :src => "/images/table.png", :width => "600"}/
    
    
    
    %hr/
    %form
      %input{:type => "submit", :value => "Save"}/
      %input{:type => "submit", :value => "Download"}/
      %input{:type => "submit", :value => "Go to previous page"}/
      %input{:type => "submit", :value => "New File"}/
      
    :javascript
      $(window).load(function(){
      $('#cover').fadeOut(2000);

      });